>> Espero que seja útil para vocês =)

class Calculadora():

    def __init__(self, n1=1, n2=1):
        self.n1 = n1
        self.n2 = n2
    def operacao1(self, n1, n2):
        self.n1 = n1
        self.n2 = n2
        print('O Resultado de',n1,'+',n2, 'é:',int(n1 + n2))
    def operacao2(self, n1, n2):
        self.n1 = n1
        self.n2 = n2
        print('O Resultado de',n1,'-',n2, 'é:',int(n1 - n2))
    def operacao3(self, n1, n2):
        self.n1 = n1
        self.n2 = n2
        print('O Resultado de',n1,'X',n2, 'é:',int(n1 * n2))
    def operacao4(self, n1, n2):
        self.n1 = n1
        self.n2 = n2
        print('O Resultado de',n1,'/',n2, 'é:',int(n1 / n2))
    def operacao5(self, n1, n2):
        self.n1 = n1
        self.n2 = n2
        print('O Resultado de',n1,'^',n2, 'é:',int(n1 ** n2))
    def operacao6(self, n1, n2):
        self.n1 = n1
        self.n2 = n2
        print('O Resultado de',n1,'%',n2, 'é:',float(n1 % n2))

print('Seja bem vindo usuário! Para iniciar digite qual operação deseja realizar:')
print('1- (+) PARA SOMA'
      '\n2- (-) PARA SUBTRAÇÃO'
      '\n3- (*) PARA MULTIPLICAÇÃO'
      '\n4- (/) PARA DIVISÃO'
      '\n5- (^) PARA EXPONENCIAÇÃO'
      '\n6- (%) PARA MÓDULO')

def continuar(entrada):
  if entrada:
    return True
  else:
    return False 

calcular = True
while calcular: 
  calculo = Calculadora()
  opcao = input('\nEscolha uma opção (1, 2, 3, 4, 5 ou 6): ')
  if not(opcao in '1 2 3 4 5 6'):
    print('Opção inválida')
    continue 
  else: 
    opcao = int(opcao)
    if opcao == 1: 
      n1 = int(input('Digite o primeiro numero: '))
      n2 = int(input('Digite o segundo numero: '))
      calculo.operacao1(n1, n2)
      calcular = continuar(input('Tecle ENTER para encerrar ou digite qualquer coisa para continuar: '))
      print('Programa encerrado.')
    elif opcao == 2: 
      n1 = int(input('Digite o primeiro numero: '))
      n2 = int(input('Digite o segundo numero: '))
      calculo.operacao2(n1, n2)
      calcular = continuar(input('Tecle ENTER para encerrar ou digite qualquer coisa para continuar: '))
      print('Programa encerrado.')
    elif opcao == 3: 
      n1 = int(input('Digite o primeiro numero: '))
      n2 = int(input('Digite o segundo numero: '))
      calculo.operacao3(n1, n2)
      calcular = continuar(input('Tecle ENTER para encerrar ou digite qualquer coisa para continuar: '))   
      print('Programa encerrado.')
    elif opcao == 4: 
      n1 = int(input('Digite o primeiro numero: '))
      n2 = int(input('Digite o segundo numero: '))
      calculo.operacao4(n1, n2)
      calcular = continuar(input('Tecle ENTER para encerrar ou digite qualquer coisa para continuar: '))
      print('Programa encerrado.')
    elif opcao == 5: 
      n1 = int(input('Digite o primeiro numero: '))
      n2 = int(input('Digite o segundo numero: '))
      calculo.operacao5(n1, n2)
      calcular = continuar(input('Tecle ENTER para encerrar ou digite qualquer coisa para continuar: '))  
      print('Programa encerrado.')
    elif opcao == 6: 
      n1 = int(input('Digite o primeiro numero: '))
      n2 = int(input('Digite o segundo numero: '))
      calculo.operacao6(n1, n2)
      calcular = continuar(input('Tecle ENTER para encerrar ou digite qualquer coisa para continuar: '))    
      print('Programa encerrado.')  
